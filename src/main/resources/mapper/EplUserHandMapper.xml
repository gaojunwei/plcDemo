<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plc.gjw.user.dao.EplUserHandDao">

  <update id="updateByExampleSelective" parameterType="map">
    update epl_user
      <trim suffixOverrides="," prefix="set">
        <if test="record.operatorId != null">
          operator_id = operator_id+#{record.operatorId,jdbcType=BIGINT},
        </if>
      </trim>
    <trim prefix="where" prefixOverrides="and|or">
      <if test="example.user_account!=null">
        AND user_account = #{example.user_account,jdbcType=VARCHAR}
      </if>
      <if test="example.id!=null">
        OR id=#{example.id,jdbcType=BIGINT}
      </if>
    </trim>

    <!--<where>
      <if test="example.user_account!=null">
        user_account = #{example.user_account,jdbcType=VARCHAR}
      </if>
      <if test="example.id!=null">
        or id=#{example.id,jdbcType=BIGINT}
      </if>
    </where>-->
  </update>
</mapper>